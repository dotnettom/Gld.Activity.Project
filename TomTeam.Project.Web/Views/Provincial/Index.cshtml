@{
    var isLogin = (bool)ViewBag.IsLogin;
    ViewBag.CurrentPageName = "乡试";
    var examList = ViewBag.ExamList as Abp.Application.Services.Dto.PagedResultOutput<TomTeam.Project.Gld.Exam.Dto.ExamListDto>;
}

@model TomTeam.Project.Config.ActivityConfig

<!--[if lte ie 7]>
                    <div style="position:fixed;left:0;right:0;text-align:center;z-index:5;background:#f00;color:#fff">
                              为了更好的体验本网站，请尽量在Chrome系如360等浏览器下浏览。
                    </div>
  <![endif]-->
@if (!isLogin)
{
    <span>请先登录</span>
}
else
{
    <div class="q">
        <div class="main">
            <div class="body">
                <div class="wrapper">
                    <div class="inner q-list">
                        <h1 class="title text-center">
                            @Model.ExamTtile
                        </h1>
                        <ul class="content">
                            @foreach (var item in examList.Items)
                            {
                                <li class="item">
                                    <div class="order">
                                        <span class="num"></span>
                                    </div>
                                    <div class="title">
                                        @item.TopicName
                                    </div>
                                    <ul class="content">
                                        @foreach (var options in item.Answers)
                                        {
                                            <li>
                                                @(options.Options + "、" + options.Content)
                                            </li>
                                        }
                                    </ul>
                                    <p class="a">
                                        @foreach (var options in item.Answers)
                                        {
                                            <label>
                                                <input type="radio" name="q1" id="" />@options.Options
                                            </label>
                                        }
                                    </p>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="wrapper">
            <div class="inner a-info">
                <button href="javascript:;" class="btn btn-primary big fr ">交卷</button>
                <span class="statistics">
                    共
                    <span class="a-amount num">@Model.ExamCount </span>题 总分 <span class="a-score num">
                        @(Model.EveryExamIntegral * Model.ExamCount)
                    </span>分
                </span>
            </div>
        </div>
    </div>
}
